//- 메인 페이지
block restrList
  h1.text-center.mt-5 명지대 맛집 리스트
  .row.mr-0
    .col-sm-12
      h3.ml-3.mt-5 즐겨찾기
      table#allestrList.table.table.pull-center.table-hover.text-center(style="width: 100%; margin: auto; background-color:#FFA64C")
        thead
          tr
            th(scope="col") 음식점 이름
            th(scope="col") 종류
            th(scope="col") 위치
            th(scope="col") 설명
            th(scope="col") 즐겨찾기
        tbody
          each value in restr_before
            tr
                td.restr_name= value.Restr.restr_name
                td.type= value.Restr.restr_type
                td.locate= value.Restr.restr_locate
                td.desc= value.Restr.restr_desc
                td
                    button.btn.btn-outline-dark.stop 즐겨찾기 취소

  .row.mr-0
    .col-sm-12
      h3.ml-3.mt-5 맛집 목록
      table.table.table.pull-center.table-hover.text-center(style="width: 100%; margin: auto; background-color:#FFDFBF")
        thead
          tr
            th(scope="col") 음식점 이름
            th(scope="col") 종류
            th(scope="col") 위치
            th(scope="col") 설명
            th(scope="col") 즐겨찾기

        tbody
          each value in restr_cur
            tr 
              td.non_restr_name #{value.restr_name}
              td.non_type= value.restr_type
              td.non_locate= value.restr_locate 
              td.non_desc= value.restr_desc

              td
                button.btn.btn-outline-dark.bookmark 즐겨찾기에 추가
                
  script(src="https://unpkg.com/axios/dist/axios.min.js")
  script(src="/javascripts/restrList.js")